{
    "manifest_version": 3,
    "name": "Multi-Store Product Tracker",
    "version": "1.0",
    "description": "Captura información de productos de múltiples tiendas online",
    "permissions": [
        "activeTab",
        "scripting",
        "storage"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "host_permissions": [
        "http://localhost:5095/*"
    ],
    "icons": {
        "48": "icon48.png",
        "128": "icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "popup.js",
                "login.js",
                "storeConfigs.js",
                "authService.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}